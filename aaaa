#include <iostream>
#include <SFML/Graphics.hpp>

int main()
{
    /*
	shape.setFillColor(sf::Color(219, 164, 216));
    shape.setOutlineThickness(5);
    shape.setPosition(800 / 2 - 160, 800 / 2  - 160);
    
    // sf::ContextSettings a;
    // a.antialiasingLevel = 8;
