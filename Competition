void tems1() {
    cout << "1  | Program structure (Структура программы)" << endl;
    cout << "2  | Variables (Переменные)" << endl;
    cout << "3  | Data types (Типы данных)" << endl;
    cout << "4  | If-else (If-else construction)" << endl;
    cout << "5  | Switch-case (Конструкция switch-case)" << endl;
    cout << "6  | Cycles (Циклы)" << endl;
    cout << "7  | Links (Ссылки)" << endl;
    cout << "8  | Arrays (Массивы)" << endl;
    cout << "9  | Multi arrays (Многомерные массивы)" << endl;
    cout << "10 | Strings (Строки)" << endl;
    cout << "11 | Pointers (Указатели)" << endl;
    cout << "12 | Functions (Определение и объявление функций)" << endl;
    cout << "13 | Structs (Структуры)" << endl;
    cout << "14 | Classes (Определение классов)" << endl;
    cout << "15 | Files (Чтение и запись текстовых файлов)" << endl;
    cout << "16 | Vector (Вектор)" << endl;
    cout << "17 | Dynamic arrays (Динамические массивы)" << endl;
    cout << "18 | Sort (Сортировка)" << endl;
    cout << "===================================================================" << endl;
}
